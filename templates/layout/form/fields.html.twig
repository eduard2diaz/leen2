<!--Personalizando el * para campos requeridos-->
{% use 'form_div_layout.html.twig' with form_label as base_form_label %}
{% block form_label %}
    {{ block('base_form_label') }}
    {% if required %}
     <span class="required" title="This field is required">*</span>
    {% endif %}
{% endblock form_label %}
<!--Fin de la personalizacion-->

<!--Personalizando de los mensajes de error-->
{% block form_errors %}

    {% if errors|length > 0 %}
        <ul style="list-style: none;" class="kt-margin-t-5">
            {% for error in errors %}
                <li><span class="badge badge-danger">Error</span> {{ error.message |trans}}!</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock form_errors %}
<!--Fin de la personalizacion-->
